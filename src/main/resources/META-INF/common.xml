<idea-plugin>
	<extensions defaultExtensionNs="com.intellij">
		<notificationGroup
			id="insyncwithfoo.ryecharm.important"
			displayType="STICKY_BALLOON"
			bundle="messages.ryecharm"
			key="notifications.group.important.displayName"
		/>
		
		<notificationGroup
			id="insyncwithfoo.ryecharm.unimportant"
			displayType="BALLOON"
			bundle="messages.ryecharm"
			key="notifications.group.unimportant.displayName"
		/>
		
		<toolWindow
			id="insyncwithfoo.ryecharm.common.logging.RyeCharmLoggingToolWindowFactory"
			
			icon="/icons/other-showLogs-13.svg"
			anchor="bottom"
			secondary="true"
			canCloseContents="false"
			doNotActivateOnStart="true"
			
			factoryClass="insyncwithfoo.ryecharm.common.logging.RyeCharmLoggingToolWindowFactory"
		/>
		
		<dependencySupport kind="python" coordinate="ruff" displayName="Ruff"/>
		<dependencySupport kind="python" coordinate="uv" displayName="uv"/>
		<dependencySupport kind="python" coordinate="ty" displayName="ty"/>
		
		<console.folding
			id="insyncwithfoo.ryecharm.common.logging.RyeCharmCommandOutputFoldingBuilder"
			implementation="insyncwithfoo.ryecharm.common.logging.RyeCharmCommandOutputFoldingBuilder"
		/>
	</extensions>
	
	<actions>
		<action
			id="insyncwithfoo.ryecharm.common.logging.ActivateRyeCharmLoggingToolWindowAction"
			class="insyncwithfoo.ryecharm.common.logging.ActivateRyeCharmLoggingToolWindowAction"
			icon="/icons/other-showLogs-13.svg"
		>
			<add-to-group group-id="ActivateToolWindowActions"/>
		</action>
	</actions>
</idea-plugin>
